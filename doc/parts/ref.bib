  file            = {:C$\backslash$:/Users/jonat/Documents/10{\_}Paper/Verdonschot, Nijboer - 2004 - Testing the European stream typology of the Water Framework Directive for macroinvertebrates.pdf:pdf},
  isbn            = {0018-8158},
