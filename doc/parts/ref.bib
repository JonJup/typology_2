@Article{Verdonschot2006b,
  author          = {Verdonschot, Piet F. M.},
  journal         = {Hydrobiologia},
  title           = {{Evaluation of the use of Water Framework Directive typology descriptors, reference sites and spatial scale in macroinvertebrate stream typology}},
  year            = {2006},
  issn            = {00188158},
  number          = {1},
  pages           = {39--58},
  volume          = {566},
