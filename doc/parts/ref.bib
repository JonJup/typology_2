  doi             = {10.1007/s10750-006-0071-x},
  file            = {:C$\backslash$:/Users/jonat/Documents/10{\_}Paper/Verdonschot - 2006 - Evaluation of the use of Water Framework Directive typology descriptors, reference sites and spatial scale in macro.pdf:pdf},
  isbn            = {0018-8158},
  keywords        = {DCA,Ecological quality,Europe,Macroinvertebrates,Ordination,Project AQUEM,Project STAR,Reference condition,Stream typology,WFD},
  mendeley-groups = {003{\_}Lesen/mzb paper},
